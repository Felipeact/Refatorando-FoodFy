    <section>
    
        <div class="acessadas">
        {% for item in items %}
            <div class="content-img">
                <a href="/receitas/{{item.id}}">
                <img src="{{item.image}}" class="img">
                <div class="contem" id="1">
                    <p class="titule">{{item.title}}<p>
                    <p class="titule2">{{item.author}}</p>
                </a>
                </div>
            </div>

        {% endfor %}
    </section>
    
    <footer>
        <div class="footer">
            <p>Todos Direitos reservados, recitas Foodfy</p>
        </div>
    </footer>

    <div class="modal-burguer">
        <div class="modal">
            <a class="close-modal">Fechar modal</a>
            <div class="modal-content">
                <img src="" class="img">
                <div class="contem">
                    <p class="titulo"><p>
                    <div>
                        <p class="sub"></p>
                    </div> 
                </div>
            </div>
        </div>
    </div>


